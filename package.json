{
  "name": "ollama-participant",
  "displayName": "ollama-participant",
  "publisher": "dartyushin",
  "description": "Ollama participant for GitHub copilot.",
  "icon": "assets/img/ollama-64x64.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/denisart/ollama-participant"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "ollama-participant",
        "fullName": "Ollama Participant",
        "name": "ollama",
        "description": "Ollama Participant for GitHub Copilot",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "Ollama Participant",
      "properties": {
        "ollama-participant.model": {
          "type": "string",
          "enum": [
            "llama3.1",
            "qwen2.5-coder",
            "codellama"
          ],
          "default": "llama3.1",
          "description": "Ollama model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build": "npm run compile && npm exec vsce package"
  },
  "devDependencies": {
    "@types/eslint": "~9.6.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ollama": "^0.5.11"
  }
}
